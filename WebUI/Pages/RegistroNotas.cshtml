@model WebUI.Pages.RegistroNotasModel
@{
}
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscripciones[Model.Count].Alumno.Legajo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscripciones[Model.Count].Alumno.Legajo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscripciones[Model.Count].Alumno.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscripciones[Model.Count].Alumno.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Inscripciones[Model.Count].Alumno.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inscripciones[Model.Count].Alumno.Apellido)
        </dd>
    </dl>
    <form method="post">
        <div class="form-group">
            <input type="hidden" asp-for="idCurso"/>
            <input type="hidden" asp-for="Count" />
            <input type="hidden" asp-for="Inscripcion.InscripcionId" />
            <label asp-for="Inscripcion.Nota" class="control-label"></label>
            <input asp-for="Inscripcion.Nota" class="form-control" />
            <span asp-validation-for="Inscripcion.Nota" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Actualizar Nota" class="btn btn-primary" />
        </div>
    </form>
</div>
